<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.chefschoice">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".SplashActivity"
                android:label="Chef's Choice"
                android:theme="@style/splashScreenStyle"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".MainActivity"
                android:label="Chef's Choice1"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".ViewRecipeActivity"
                android:label="view recipe"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".AddRecipeActivity"
                android:windowSoftInputMode="adjustPan|adjustResize"
                android:label="add recipe"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".RecipesListActivity"
                android:label="recipes"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".RecipeSingleActivity"
                android:label="single recipe"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".EditRecipeActivity"
                android:label="recipes"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".AuthenticationSimpleActivity"
                android:label="Authentication"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".AllRecipesListActivity"
                android:label="AllRecipes"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>


        </application>

</manifest>